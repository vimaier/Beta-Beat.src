  			bbeat=1.1,dqf=maxdispersion,dparx=0.05,dpary=0.05,halo={1,1,1,1}, betaqfx=maxbetx, interval=3;
   			
  plot,table=aperture,noline,vmin=0,vmax=10,haxis=s,hmin=0,hmax=L/6,vaxis=n1,on_elem,style=100; 
  
  delete, sequence=sps;
